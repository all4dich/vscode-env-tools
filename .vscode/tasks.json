{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Open new tmux window",
        "type": "shell",
        "command": "tmux new -d -s ${workspaceFolderBasename} -c ${workspaceFolder} && tmux send-keys -t ${workspaceFolderBasename} \"${input:env_cmd}\" C-m && tmux attach -t ${rkspaceFolderBasename}",
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": true,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Attach to tmux",
        "type": "shell",
        "command": "tmux a -t ${workspaceFolderBasename}",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        }
      }
    ],
    "inputs": [
      {
        "type": "promptString",
        "id": "env_cmd",
        "default": "export PATH=~/.local/bin:$PATH;ls",
        "description": "Initial Command for tmux"
      }
    ]
}